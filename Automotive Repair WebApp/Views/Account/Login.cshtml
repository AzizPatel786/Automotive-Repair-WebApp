@model Automotive_Repair_WebApp.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/loginreg.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign in & Sign up Form</title>
</head>
<body>
    <img class="wave" src="/Images/wave.png">
    <div class="container">
        <div class="img">
            <img src="/Images/—Pngtree—auto car service template_3607234.png">
        </div>
        <div class="login-content">
            <form method="post" > @*action="index.html"*@
                <img src="/Images/avatar.svg">
                <h2 class="title">Welcome</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Email</h5>
                        <input asp-for="Email" type="text" class="input">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input asp-for="Password" type="password" class="input">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <a href="#">Forgot Password?</a>
                <input type="submit" class="btn">
            </form>
        </div>
    </div>
    <script src="~/js/logreg.js"></script>
</body>
</html>
